@model MenuViewModel
<div class="col-sm-2 col-xs-12">&nbsp;</div>
<div class="text-center col-sm-8 col-xs-12">
    <form asp-controller="Category" asp-action="SelectCategory" method="post">
        <div class="col-sm-4 col-xs-12">&nbsp;</div>
        <div class="col-sm-4 col-xs-12" style="padding-bottom:5%;">
            <span style="font-size:medium;">Categories</span>
            <select asp-for="CategoryId" asp-items="@Model.GetCategories()"
                    class="form-group form-control" onchange="this.form.submit();">
                <option selected style="display:none;">Select Category</option>
            </select>
        </div>
        <div class="col-sm-4 col-xs-12">&nbsp;</div>
    </form>
    <catalogue category="@Model.CategoryId"></catalogue>
</div>
<div class="modal" id="details_popup">
    <div class="modal-dialog">
        <div class="modal-content col-xs-12">
            <div class="modal-body">
                <a href="" style="font-size:xx-large" data-dismiss="modal" class="pull-right">X</a>
                <div class="text-center">
                    <img alt="" id="detailsGraphic" />
                    <h4 id="description"></h4>
                </div>
                <form asp-controller="Category" asp-action="SelectItem" method="post" role="form">
                    <table class="table table-striped">
                        <tr><td class="col-xs-4 text-right">Calories</td><td class="col-xs-4 text-left" id="cal"></td></tr>
                        <tr><td class="col-xs-4 text-right">Carbs</td><td class="col-xs-4 text-left" id="carb"></td></tr>
                        <tr><td class="col-xs-4 text-right">Choles.</td><td class="col-xs-4 text-left" id="chol"></td></tr>
                        <tr><td class="col-xs-4 text-right">Fat (grams)</td><td class="col-xs-4 text-left" id="fat"></td></tr>
                        <tr><td class="col-xs-4 text-right">Fibre (grams)</td><td class="col-xs-4 text-left" id="fibre"></td></tr>
                        <tr><td class="col-xs-4 text-right">Protein (grams)</td><td class="col-xs-4 text-left" id="pro"></td></tr>
                        <tr><td class="col-xs-4 text-right">Salt (mgs.)</td><td class="col-xs-4 text-left" id="salt"></td></tr>
                        <tr>
                            <td class="col-xs-4 text-right">Qty:</td>
                            <td class="col-xs-4 text-left">
                                <input asp-for="Qty" type="number" maxlength="3" size="3" min="0" style="width: 50px;" id="qty" />
                                <input asp-for="Id" type="hidden" id="detailsId" />
                            </td>
                        </tr>
                    </table>
                    <div class="text-center">
                        <button type="submit" class="btn btn-sm btn-primary" id="modalbtn">Add To Tray</button>
                        <button id="btnRemove" type="submit" class="btn-sm btn btn-danger">Remove Item</button>
                        <a href="/Tray" class="btn btn-sm btn-success">View Tray</a>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <div id="results" class="text-center">
                    @ViewBag.AddMessage
                </div>
            </div>
        </div><!--modal-content-->
    </div><!--modal-dialog-->
</div><!--modal-->